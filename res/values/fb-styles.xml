<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

	<style name="FB_theme" parent="Theme.AppCompat.Light.NoActionBar">
		<item name="android:actionBarStyle">@style/FB_actionBar</item>
		<item name="actionBarStyle">@style/FB_actionBar</item>
		<item name="android:windowDisablePreview">true</item>
		<item name="android:windowBackground">@null</item>
		<item name="android:windowContentOverlay">@null</item>
		<item name="android:actionModeBackground">@drawable/cab_background_top_photo_bar</item>
		<item name="colorPrimary">@color/fb_primary</item>
		<item name="colorPrimaryDark">@color/fb_primary_dark</item>
		<item name="toolbarStyle">@style/Widget.AppCompat.Toolbar</item>
	</style>

	<style name="FB_actionBar" parent="@style/Widget.AppCompat.Light.ActionBar">
		<item name="android:background">@color/fb_primary</item>
		<item name="background">@color/fb_primary</item>
		<!--
        <item name="android:titleTextStyle">@style/FB_TextStyle</item>
		<item name="android:indeterminateProgressStyle">@android:style/Widget.ProgressBar.Small</item>
		-->
	</style>

	<style name="FB_TextStyle" parent="@android:style/TextAppearance">
		<item name="android:textColor">@android:color/white</item>
	</style>

	<!-- Albums style -->
	<style name="FB_theme.albums">
		<item name="android:actionBarStyle">@style/FB_actionBar.albums</item>
	</style>

	<style name="FB_actionBar.albums">
		<item name="android:background">#669900</item>
	</style>

	<!-- Photos style -->
	<style name="FB_theme.photos">
		<item name="android:actionBarStyle">@style/FB_actionBar.photos</item>
	</style>

	<style name="FB_actionBar.photos">
		<item name="android:background">#9933CC</item>
	</style>

</resources>